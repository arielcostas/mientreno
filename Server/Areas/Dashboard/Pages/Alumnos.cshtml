@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AlumnosModel
@{
	ViewData["Title"] = @AppStrings.alumnos;
}

<main id="main-container">
	@if (Model.EnlaceInvitacion is null)
	{
		<div id="title-with-action">
			<h2>@AppStrings.alumnos</h2>
			<form method="post" id="form-invite"></form>
			<div class="form-inline">
				<label for="Cantidad" form="form-invite">Invitaciones</label>
				<input type="number" id="Cantidad" name="cantidad" min="1" value="1" max="3" form="form-invite" class="form-control"/>
				<input type="submit" value="+ Invitar" class="button button-primary" form="form-invite"/>
			</div>
		</div>
	}
	else
	{
		<h2>@AppStrings.alumnos</h2>
		<div class="alert alert-good">
			<strong class="alert-title">Invitación creada</strong>
			<p>
				Comparte el siguiente enlace con tu(s) alumno(s):
				<a href="@Model.EnlaceInvitacion" class="link link-bold code">@Model.EnlaceInvitacion</a>
			</p>
		</div>
	}

	@if (Model.Alumnos.Length > 0)
	{
		<div class="grid grid-3">
			@foreach (var alumno in Model.Alumnos)
			{
				<div class="alumno">
					@{var png = alumno.Id + ".png";}
					<img src="/Static/profile/@png" alt="Imagen de @alumno.NombreCompleto"/>
					<h3>@alumno.NombreCompleto</h3>
				</div>
			}
		</div>
	}
	else
	{
		<div class="alert alert-centre">
			<strong class="alert-title">No tienes alumnos</strong>
			<p>
				Invita a tus alumnos a unirse a tí generando una invitación en la parte superior derecha.
			</p>
		</div>
	}

</main>