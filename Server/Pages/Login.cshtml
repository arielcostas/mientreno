@page
@{
	ViewData["Title"] = AppStrings.login;
}
@using Microsoft.IdentityModel.Tokens
@model LoginModel

<main id="main-dialogue">
	<h1>@AppStrings.login</h1>

	@if (!Model.MensajeError.IsNullOrEmpty())
	{
		<p class="text-danger">
			@Model.MensajeError
		</p>
	}

	<form method="post" id="form">
		<div class="form-group">
			<label asp-for="Form.Email">@AppStrings.email</label>
			<input asp-for="Form.Email" type="email" autocomplete="email" class="form-control"/>
		</div>

		<div class="form-group">
			<label asp-for="Form.Contraseña">@AppStrings.password</label>
			<input asp-for="Form.Contraseña" type="password" autocomplete="current-password" class="form-control"/>
		</div>

		<div class="form-check">
			<input asp-for="Form.Recordar" type="checkbox" class="form-check-input"/>
			<label asp-for="Form.Recordar">
				@AppStrings.rememberMe
			</label>
		</div>

		<a asp-page="Register" class="link link-primary">@AppStrings.newHereRegister</a>

		<button class="button button-primary" type="submit">@AppStrings.doLogin</button>
	</form>

</main>