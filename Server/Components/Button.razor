<button @attributes="AdditionalAttributes" class="@ButtonStyle">
	@ChildContent
</button>

@code {
	[Parameter(CaptureUnmatchedValues = true)]
	public Dictionary<string, object>? AdditionalAttributes { get; set; }

	[Parameter]
	public RenderFragment? ChildContent { get; set; }

	[Parameter]
	public Styles ButtonStyle { get; set; } = Styles.Primary;

	public enum Styles
	{
		Primary,
		Link
	}
}